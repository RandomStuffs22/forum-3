<h1>Editar Tópico</h1>

<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => topic_path(@forum, @topic),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :locals => { :f => f } %>
<br />
<%= submit_tag 'Salvar Alterações', :or => link_to('Cancelar', topic_path(@forum, @topic)) %>
<% end -%>