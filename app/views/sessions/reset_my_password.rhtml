<h2>Nova senha para "<%= @user.login %>" <h2>
<%= error_messages_for 'user' %>
<%= form_tag :controller => "sessions", :action => "update_password", :id => @user %>
<p>
    <label>Senha</label><br/>
<%= password_field "user", "password" %>
</p>
<p>
    <label>Confirmação de Senha</label><br/>
<%= password_field "user", "password_confirmation" %>
</p>














<%#= render :partial => "users/password"  %>
<%= submit_tag "Atualizar ", :class => 'button' %>
<%= end_form_tag %>