<h1>Esqueci minha senha</h1>
<%= form_remote_tag(:url=>{:controller => "sessions", :action => "send_my_password"}, :update=>"lost_password") %>
<p>
  <label for="login_or_email">Entre com seu login ou email</label><br />
  <%= text_field_tag "identification" %>
</p>
<%= submit_tag "Enviar", :class => 'button' %>
<%= end_form_tag %>
















